<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/static/styles.css" rel="stylesheet">
</head>

{% include "components/navbar.html.jinja" %}

<body>

    {% for message in get_flashed_messages() %}

    <div class="alert alert-primary" role="alert">
        {{message}}
    </div>

    {%endfor%}

    <h1 class="text-center h1 my-5">Sign Up</h1>

    <main class="container col-6 mt-5">

        <form action="/signup" method="post" class="text-center">

            <div class="my-5">
                <label for="username" class="form-label h3">Username</label>
                <input name="username" type="text" class="form-control" id="username" required
                    value="{{request.form.get('username', '')}}">
            </div>

            <div class="my-5">
                <label for="password" class="form-label h3">Password</label>
                <input name="password" type="password" class="form-control" id="password" required>
            </div>

            <div class="my-5">
                <label for="confirm_password" class="form-label h3">Confirm Password</label>
                <input name="confirm_password" type="password" class="form-control" id="confirm_password" required>
            </div>


            <div class="row">

                <div class="my-5 col-6">
                    <label for="full_name" class="form-label h3">Full Name</label>
                    <input name="full_name" type="text" class="form-control" id="full_name" required
                        value="{{request.form.get('full_name', '')}}">
                </div>

                <div class="my-5 col-6">
                    <label for="email" class="form-label h3">Email</label>
                    <input name="email" type="email" class="form-control" id="email" required
                        value="{{request.form.get('email', '')}}">
                </div>

            </div>

            <div class="row">

                <div class="my-5 col-4">
                    <label for="phone" class="form-label h3">Phone</label>
                    <input name="phone" type="text" class="form-control" id="phone" required
                        value="{{request.form.get('phone', '')}}">
                </div>

                <div class="my-5 col-8">
                    <label for="address" class="form-label h3">Address</label>
                    <input name="address" type="text" class="form-control" id="address" required
                        value="{{request.form.get('address', '')}}">
                </div>

            </div>

            <button type="submit" class="btn btn-secondary">Submit</button>
        </form>

    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>