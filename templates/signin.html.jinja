<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="styles.css" rel="stylesheet">
</head>

{% include "components/navbar.html.jinja" %}

<body>

    <h1 class="text-center h1 my-5">Sign In</h1>

    <main class="container col-6 mt-5">

        {% for message in get_flashed_messages() %}

        <div class="alert alert-primary" role="alert">
            {{message}}
        </div>

        {%endfor%}

        <form action="/signin" method="post" class="text-center">

            <div class="my-5">
                <label for="username" class="form-label h3">Username</label>
                <input name="username" type="text" class="form-control" id="username" required
                    value="{{request.form.get('username', '')}}">
            </div>

            <div class="my-5">
                <label for="password" class="form-label h3">Password</label>
                <input name="password" type="password" class="form-control" id="password" required>
            </div>

            <button type="submit" class="btn btn-primary col-12">Submit</button>
        </form>

    </main>
</body>