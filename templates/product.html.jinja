<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>homepage.html</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>

    <div>
        {% include "components/navbar.html.jinja" %}
    </div>

    <div class="container row mx-auto">

        <div class="col-12 my-5">
            <div class="row">

                <div class="col-md-5 sticky-top">
                    <img src="{{product['image_dir']}}" class="img-fluid rounded-start" alt="...">
                </div>

                <div class="col-7">

                    <div class="text-center">
                        <h5 class="h1">{{product['product_name']}}</h5>
                        <p class="text-secondary fs-5">{{product['product_type']}}</p>
                    </div>

                    <div class="mx-5 mt-5">
                        <p class=>{{product['description']}}</p>
                    </div>

                    <div class="text-center mx-5">
                        <h2 class="">${{"%.2f" | format(product['price'])}} USD</h2>
                    </div>


                    <form method="post" action="/product/{{product['product_id']}}/cart">

                        <div class="text-center row">

                            <div class="col-8">
                                <label for="quantity" class="form-label justify-content-start">Quantity</label>
                                <input name="quantity" type="number" class="form-control" id="quantity" value="1"
                                    required>
                            </div>


                            <div class="col-4 align-content-end">
                                <button type="submit" class="btn btn-primary col-12">Add to cart</button>
                            </div>
                        </div>
                    </form>

                </div>

            </div>

        </div>
    </div>

</body>

</html>